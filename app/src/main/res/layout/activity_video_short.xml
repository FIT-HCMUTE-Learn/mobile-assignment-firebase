<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- VideoView căn giữa -->
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:background="#000000" />

    <!-- Avatar + email của user đăng nhập (góc trên phải) -->
    <LinearLayout
        android:id="@+id/ln_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your.email@example.com"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/img_avatar_top_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:contentDescription="User Avatar"
            android:background="@drawable/ic_avatar_placeholder"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Container ngang hàng cho Avatar Uploader + Thông tin Uploader (góc dưới bên trái) -->
    <LinearLayout
        android:id="@+id/uploader_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar uploader -->
        <ImageView
            android:id="@+id/img_uploader_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:contentDescription="Uploader Avatar" />

        <!-- Thông tin uploader + tên video -->
        <LinearLayout
            android:id="@+id/uploader_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_uploader_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploader Email"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Shorts"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Nút Like/Dislike/Share (góc giữa bên phải) -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_like"
            android:contentDescription="Like" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/btn_dislike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dislike"
            android:contentDescription="Dislike"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/dislike_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</FrameLayout>
